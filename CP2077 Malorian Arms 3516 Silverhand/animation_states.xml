		</search>
		<target mode="append">
			<anim name="malorian_3516_recoil_steelsight" weight="malorian_3516"/>
		</target>
	</tweak>
	
		<!--Inspect animation-->
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_states">
		<search>
			<xml/>
			<state name="fps/cash_inspect"/>
			<anim name="glock_inspect" weight="glock"/>
		</search>
		<target mode="append">
			<anim name="malorian_3516_inspect" weight="malorian_3516"/>
			<keys>
				<key at="trigger" trigger="malorian_inspect_enter" callback="play_sound" class_name="base" param1="malorian_inspect_enter"/>
				<key at="trigger" trigger="malorian_inspect_lock" callback="play_sound" class_name="base" param1="malorian_inspect_lock"/>
				<key at="trigger" trigger="malorian_inspect_open" callback="play_sound" class_name="base" param1="malorian_inspect_open"/>
				<key at="trigger" trigger="malorian_inspect_slide_back" callback="play_sound" class_name="base" param1="malorian_inspect_slide_back"/>
				<key at="trigger" trigger="malorian_inspect_slide_pull" callback="play_sound" class_name="base" param1="malorian_inspect_slide_pull"/>
				<key at="trigger" trigger="malorian_inspect_slide_release" callback="play_sound" class_name="base" param1="malorian_inspect_slide_release"/>
				<key at="trigger" trigger="malorian_inspect_spin" callback="play_sound" class_name="base" param1="malorian_inspect_spin"/>
				<key at="trigger" trigger="malorian_inspect_unlock" callback="play_sound" class_name="base" param1="malorian_inspect_unlock"/>
			</keys>
		</target>
	</tweak>
	
	
	<!--
