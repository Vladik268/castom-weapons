			<anim name="malorian_3516_recoil_steelsight" 	file="anims/fps/malorian_3516/malorian_3516_recoil_steelsight" blend_set="all"/>
			<anim name="malorian_3516_equip" 			file="anims/fps/malorian_3516/malorian_3516_equip" blend_set="all"/>
			<anim name="malorian_3516_unequip" 			file="anims/fps/malorian_3516/malorian_3516_unequip" blend_set="all"/>
			<anim name="malorian_3516_melee" 			file="anims/fps/malorian_3516/malorian_3516_melee" blend_set="all"/>
