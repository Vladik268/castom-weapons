			<anim name="or12_com_point" 								file="anims/fps/or12/or12_com_var7" blend_set="all"/>
			<anim name="or12_get_up" 								file="anims/fps/or12/or12_get_up" blend_set="all"/>
			<anim name="or12_gogo" 									file="anims/fps/or12/or12_gogo" blend_set="all"/>
			<anim name="or12_tased" 									file="anims/fps/or12/or12_tased" blend_set="all"/>
