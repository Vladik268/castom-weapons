			<anim name="blast_recoil" 								file="anims/fps/blast/blast_recoil" blend_set="all"/>
			<anim name="blast_recoil_enter" 						file="anims/fps/blast/blast_recoil_enter" blend_set="all"/>
			<anim name="blast_recoil_loop" 							file="anims/fps/blast/blast_recoil_loop" blend_set="all"/>
			<anim name="blast_recoil_exit" 							file="anims/fps/blast/blast_recoil_exit" blend_set="all"/>
			<anim name="blast_recoil_steelsight" 					file="anims/fps/blast/blast_recoil" blend_set="all"/>
			<anim name="blast_equip" 								file="anims/fps/blast/blast_equip" blend_set="all"/>
			<anim name="blast_unequip" 								file="anims/fps/blast/blast_unequip" blend_set="all"/>
			<anim name="blast_melee" 								file="anims/fps/blast/blast_melee" blend_set="all"/>
