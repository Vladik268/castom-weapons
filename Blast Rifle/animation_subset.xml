<?xml version="1.0"?>
<tweaks>
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_subset">
		<search>
			<xml/>
		</search>
		
		<!--
			Replace all instances of 'example' below with the ID of your animation.
			Note that recoil_steelsight does not have a unique animation in this example; you can edit the filepath in the 'file' section with one if you wish.
			If your gun cannot be fired in full auto, you can delete the recoil_enter, recoil_loop, and recoil_exit lines.
		-->
		
		<target mode="attach">
			<anim name="blast_reload" 								file="anims/fps/blast/blast_reload" blend_set="all"/>
			<anim name="blast_reload_not_empty" 					file="anims/fps/blast/blast_reload" blend_set="all"/>
